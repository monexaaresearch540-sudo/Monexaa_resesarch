PORT=5000
DIGIO_API_URL=https://api.digio.in/v2/client/template/multi_templates/create_sign_request
DIGIO_AUTH_TOKEN=Basic YOUR_BASE64_ENCODED_CREDENTIALS
DIGIO_TEMPLATE_KEY=YOUR_TEMPLATE_KEY

